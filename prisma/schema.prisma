generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Profile {
  id            String    @id
  email         String    @unique
  name          String?
  role          UserRole  @default(USER)
  bookingLink   String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  availabilities Availability[]
  bookings       Booking[]

  @@map("profiles")
}

model Availability {
  id          String   @id @default(cuid())
  userId      String
  user        Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)

  dayOfWeek   Int
  startTime   String
  endTime     String
  duration    Int

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("availabilities")
}

model Booking {
  id              String        @id @default(cuid())
  lawyerId        String
  lawyer          Profile       @relation(fields: [lawyerId], references: [id], onDelete: Cascade)

  clientName      String
  clientEmail     String
  clientPhone     String?

  bookingDate     DateTime
  duration        Int
  type            String        @default("онлайн-консультация")

  status          BookingStatus @default(PENDING)
  paymentStatus   Boolean       @default(false)

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("bookings")
}
